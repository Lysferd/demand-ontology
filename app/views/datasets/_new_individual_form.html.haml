= form_tag route do
  = hidden_field_tag 'individual[dataset_id]', id
  %table
    %thead
      %th
        Propriedade
      %th
        Valor
    %tbody
      %tr
        %td= label_tag 'individual[name]', 'Nome:'
        %td= text_field_tag 'individual[name]'
      %tr
        %td= label_tag 'individual[class]', 'Classe:'
        - if not route =~ /resource/
          %td= text_field_tag 'individual[class]', ontological_class, readonly: true
        - else
          %td= select_tag 'individual[class]', select_helper( ontological_class, { prompt: 'Selecione uma classe' } )

      - if route =~ /resource|building_system/
        %tr
          %td= label_tag 'individual[property][resource:Pertence_A]', 'Pertence_A:'
          %td= select_tag 'individual[property][resource:Pertence_A]',
            select_helper( individual_list, selected: params[:parent] )

      %tr
        %td= select_tag 'property',
          select_properties( property_list ), { prompt: 'Selecione uma propriedade' }
        %td= link_to 'Adicionar Propriedade', '#', id: 'add_property',
          data: { dataset_id: id, type: nil, property: nil }

  %p= submit_tag 'Aplicar'