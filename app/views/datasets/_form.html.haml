= form_for @dataset do | f |
  - if @dataset.errors.any?
    .error_explanation
      %h2= pluralize( @dataset.errors.count, 'error' ) + 'prohibited this dataset from being saved:'
      %ul
        - @dataset.errors.full_messages.each do | message |
          %li= message

  = f.hidden_field :user_id, value: current_user.id
  %table
    %tbody
      %tr
        %td= f.label :name, 'Nome da Ontologia'
        %td= f.text_field :name
      %tr
        %td= f.label :rdf_source, 'Arquivo RDF/OWL'
        %td= f.file_field :rdf_source, multiple: true
    %tbody
      %tr
        %td( colspan = 2 )
          = f.submit 'Criar Dataset'
