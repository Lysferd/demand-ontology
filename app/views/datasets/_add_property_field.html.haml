      = select_tag "individual[property][#{type}:#{property}]",
        individuals, { prompt: 'Selecione um indiv√≠duo' }
    - else
      = text_field_tag "individual[property][#{type}:#{property}]"
    = image_tag 'destroy.svg', class: 'remove_property'